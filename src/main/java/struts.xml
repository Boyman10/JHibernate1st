<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="basicstruts2" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
        
        <action name="hello" class="org.apache.struts.helloworld.action.HelloWorldAction" method="execute">
            <result name="success">/HelloWorld.jsp</result>
        </action>
        
        <action name="senddataInput" class="org.apache.struts.helloworld.action.SendDataAction" method="input">
            <result name="input">/senddata.jsp</result>
        </action>
         <action name="senddata" class="org.apache.struts.helloworld.action.SendDataAction" method="execute">
            <result name="input">/senddata.jsp</result>
            <result name="success">/thankyou.jsp</result>
        </action>
    </package>
</struts>